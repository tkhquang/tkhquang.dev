{
  "root": true,
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "plugin:tailwindcss/recommended",
    "plugin:sort/recommended"
  ],
  "plugins": ["@typescript-eslint", "tailwindcss", "import", "sort"],
  "rules": {
    "tailwindcss/no-custom-classname": "off"
  },
  "ignorePatterns": ["legacy/*"]
}
